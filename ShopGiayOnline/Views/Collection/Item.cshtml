            </div>
            <div class="middle">
                <div class="bar-container">
                    <div class="bar-3" style="width: @percentThree%;"></div>
                </div>
            </div>
            <div class="side right">
                <div>@threeStar</div>
            </div>
            <div class="side">
                <div>2 star</div>
            </div>
            <div class="middle">
                <div class="bar-container">
                    <div class="bar-2" style="width: @percentTwo%;"></div>
                </div>
            </div>
            <div class="side right">
                <div>@twoStar</div>
            </div>
            <div class="side">
                <div>1 star</div>
            </div>
            <div class="middle">
                <div class="bar-container">
                    <div class="bar-1" style="width: @percentOne%;"></div>
                </div>
            </div>
            <div class="side right">
                <div>@oneStar</div>
            </div>
        </div>
