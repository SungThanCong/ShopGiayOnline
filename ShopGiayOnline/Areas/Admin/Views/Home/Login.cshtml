@model ShopGiayOnline.Models.TAIKHOANCHU

@{
    ViewBag.Title = "Login";
    <link href="~/Areas/Admin/Assets/Login.css" type="text/css" rel="stylesheet" />

}

<div id="container-form" class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header ">
                Login
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">

                        @Html.TextBoxFor(m => m.tendangnhap, "", new { @class = "form-control", @placeholder = "Username" })

                    </div>
                    <div class="form-group">

                        @Html.PasswordFor(m => m.matkhau, new { @class = "form-control", @placeholder = "Password" })
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                    </div>
                }
            </div>
        </div>
        @if (ViewBag.error != null)
        {
            <div class="alert alert-danger">
                <strong>Error!</strong> Your username or password is incorrect.
            </div>
        }

    </div>
</div>
